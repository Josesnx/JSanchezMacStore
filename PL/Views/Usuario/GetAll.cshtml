@model ML.Usuario
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h2 class="text-center">Usuarios</h2>
        <p>Agregar, Eliminar, Modificar los Usuarios</p>
    </div>

    <hr />
    <div class="row">
        <div style="float:right">
            @Html.ActionLink("Agregar", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>
    <hr />

    <div class="row">
        @if (Model.Usuarios != null)
        {
            <table class="table table-dark table-bordered table-responsive table-hover table-striped">
                <thead>
                    <tr class="table-secondary">
                        <td class="text-center" style=" font-weight:bold;">Editar</td>

                        <td style="display: none;">IdUsuario</td>
                        <td class="text-center" style=" font-weight:bold;">Nombre</td>
                        <td class="text-center" style=" font-weight:bold;">Apellido Paterno</td>
                        <td class="text-center" style=" font-weight:bold;">Apellido Materno</td>
                        <td class="text-center" style=" font-weight:bold;">Edad</td>
                        <td class="text-center" style=" font-weight:bold;">Email</td>

                        <td class="text-center" style=" font-weight:bold;">Eliminar</td>
                    </tr>
                </thead>

                <tbody>
                    @foreach (ML.Usuario usuario in Model.Usuarios)
                    {
                        <tr>

                            <td class="text-center"><a class="btn btn-warning" href="@Url.Action("Form", "Usuario", new { IdUsuario = usuario.IdUsuario })"><i class="fa-solid fa-pen-to-square"></i></a></td>

                            <td style="display: none;">@usuario.IdUsuario</td>
                            <td class="text-center">@usuario.Nombre</td>
                            <td class="text-center">@usuario.ApellidoPaterno</td>
                            <td class="text-center">@usuario.ApellidoMaterno</td>
                            <td class="text-center">@usuario.Edad</td>
                            <td class="text-center">@usuario.Email</td>

                            <td class="text-center"><a class="btn btn-danger" href="@Url.Action("Delete", "Usuario", new { IdUsuario = usuario.IdUsuario })" onclick="return confirm('Estas seguro que deseas inactivar este registro?');"><i class="fa-solid fa-eraser"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

</div>

